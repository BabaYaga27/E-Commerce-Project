@model Product

<div class="card mb-2">
  <a href="@Model.Url">
    <img class="card-img-top" src="~/img/@Model.ImageUrl"></a>

  <div class="card-body">
    <h5 class="card-title">@Model.Name</h5>
    <small class="text-muted">
      <i class="fas fa-dollar-sign">
        @Model.Price
      </i>
    </small>
  </div>
  <div class="card-footer text-center">
    <a asp-controller="Product" asp-action="Details" asp-route-url=@Model.Url class="btn btn-primary btn-sm">Details</a>
    <form action="/Cart/addToCart" method="POST" style="display:inline;">
      <input type="hidden" name="ProductId" value=@Model.ProductId>
      <input type="hidden" name="Quantity" value=1>
      <input type="hidden" name="PreviousPage" value="ProductsPage">
      <button type="submit" class="btn btn-primary btn-sm">Add To Cart</button>
    </form>
  </div>
</div>