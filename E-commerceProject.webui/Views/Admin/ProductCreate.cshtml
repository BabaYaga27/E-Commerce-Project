@model ProductModel
@{
    ViewData["Title"] = "CreateProduct";
}
<h1 class="h3"> Create Product</h1>
<hr>
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Admin" asp-action="ProductCreate" method="post">
            <div class="form-group row mb-3">
                <label asp-for="Name" class="col-sm-2 form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name" placeholder="xiaomi 11t">
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Url" class="col-sm-2 form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url" placeholder="xiaomi-11t-8gb-256gb">
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Description" class="col-sm-2 form-label"></label>
                <div class="col-sm-10">
                    <textarea id="editor" class="form-control" asp-for="Description" placeholder="features"></textarea>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="ImageUrl" class="col-sm-2 form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="ImageUrl" placeholder="2.jpg">
                </div>
            </div>
            <div class="form-group row mb-3">
                <label asp-for="Price" class="col-sm-2 form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Price" placeholder="5500">
                </div>
            </div>
            @* <div class="form-group row mb-3">
                <select asp-for="CategoryId" class="form-control"
                    asp-items="@(new SelectList(ViewBag.ListOfCategories,"Value","Text"))"></select>

            </div> *@
            <div class="form-group row mb-3">

                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Create Product</button>
                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts{
<script src="/modules/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('editor');
</script>
}
